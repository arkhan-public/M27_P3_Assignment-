@page
@model EditModel
@{
    ViewData["Title"] = "Edit Answer";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Edit Answer</h4>
            </div>
            <div class="card-body">
                <div id="errorMessage" class="alert alert-danger d-none"></div>

                <form id="editAnswerForm">
                    <div class="mb-3">
                        <label for="body" class="form-label">Body</label>
                        <textarea class="form-control" id="body" rows="8" required minlength="20" maxlength="5000">@Model.Answer?.Body</textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a href="/Questions/Details?id=@Model.Answer?.QuestionId" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.answerEditData = {
            answerId: @(Model.Answer?.Id ?? 0),
            questionId: @(Model.Answer?.QuestionId ?? 0)
        };
    </script>
    <script src="~/js/answer-edit.js"></script>
}